%article.image{id:"image_#{image.id}", class: (col if defined? col)}
  %header.title
    %h1= editable [image.exposition, image], :title, nested: :translations, nid: image.translation.id if defined? translation
  = link_to image_tag(image.image.square.thumb, class: 'img-responsive'), image.image.url, class: 'gallery'
  = manage_icons [image.exposition, image], remote: true, except: [:new, :list]